<h1>Edit Device</h1>


<%= link_to "Back", @device %> |<%= link_to "Delete", @device, :confirm => "Are you sure you want to delete this device?", :method => :delete %> 

<%= form_for @device, html: {multipart: true} do |f| %>

<% if @device.errors.any? %>
	<div id="error explanation">
		<h2><%= pluralize(@device.errors.count, "error") %> could not be saved: </h2>

		<% @device.errors.full_messages.each do |msg| %>
			<%= msg %>
		<%end%>
<%end%>

	<div class="field">
		<p>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</p>
	</div>


	<div class = "model">
		<p>
			<%= f.label :model %>
			<%= f.text_field :model %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :description %>
			<%= f.text_field :description %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :active %>
			<%= f.check_box :active, {}, "true", "false" %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :image %>
			<%= f.file_field :image %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :remote_image_url, "or image URL" %>
			<%= f.text_field :remote_image_url %>
	</div>

	<div class="field">
		<%= f.submit %>
	</div>

<%end%>
