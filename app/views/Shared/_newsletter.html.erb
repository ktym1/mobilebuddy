<%= form_tag('newsletter', method: "POST", remote: true) do %>
<div class="large-12 columns">
  <div class="row">
    <h5 class="subheader">Be the first to know when there's a great phone deal.</h5>
    <div class="large-8 columns">
          <%= email_field_tag 'email', nil, placeholder: 'Email address' %>
      </div>
     <div class="large-4 columns">
      <%= submit_tag("Get Updates",:class => "button radius") %>
     </div>
  </div>
</div>
<% end %>
