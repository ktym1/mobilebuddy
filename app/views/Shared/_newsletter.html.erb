<div id="contentDrop" style="display:none">
  <div class="row">
    <div class="large-8 columns">
      <%= form_tag('newsletter', method: "POST", remote: true) do %>
      <%= email_field_tag 'email', nil, placeholder: 'Email address' %>
    </div>
     <div class="large-4 columns">
      <%= submit_tag("Submit",:class => "button radius") %>
    </div>
    <div class="large-12 columns">
      <ul class="inline-list">
        <% @devices.each do |dev| %>
            <li>
              <%= check_box_tag 'dev_name[]', dev.name + dev.model -%>
              <%= h dev.name -%> <%= h dev.model -%>
            </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
</div>