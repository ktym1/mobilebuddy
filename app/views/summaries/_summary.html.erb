
<% if summary.has_gift_card? %>
<div class="large-3 columns [radius round] left">
	<div class="panel callout radius" >
		<h5><%= summary.retailer.name %></h5>
	    <hr>
	    <h6 class="subheader">Carrier: <%= summary.contract.name %></h6>
		<h6 style="height:100px">Gift Card: <small><%= summary.gift_card %></small></h6>
		<hr>
        <h4 class="subheader"><%= number_to_currency(summary.price) %></h4>
        <a href="<%= summary.promotion_link %>" class="button round"> Website</a>        
   </div>
</div>
<% else %>
<div class="large-3 columns [radius round] left">
	<div class="panel callout radius" style="background-color:#CCEEFF;">
		<h5><%= summary.retailer.name %></h5>
	    <hr>
	    <h6 class="subheader">Carrier: <%= summary.contract.name %></h6>
		<h6 style="height:100px" >Gift Card: <small><%= summary.gift_card %></small></h6>
		<hr>
        <h4 class="subheader"><%= number_to_currency(summary.price) %></h4>
        <a href="<%= summary.promotion_link %>" class="button round"> Website</a>        
   </div>
</div>
<% end %>

