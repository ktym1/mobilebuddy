<h1> Edit Summary </h1>

<%= render "form" %>

<%= link_to "Show", summary_path(@summary) %> |
<%= link_to "Back", summaries_path %> |
<%= link_to "Delete", @summary, :confirm => "Are you sure you want to delete this product?", :method => :delete %>


<%= form_for @summary do |f| %>

<% if @summary.errors.any? %>
	<div id="error explanation">
		<h2><%= pluralize(@summary.errors.count, "error") %> could not be saved: </h2>

		<% @summary.errors.full_messages.each do |msg| %>
			<%= msg %>
		<%end%>
<%end%>

	<div class="field">
		<p>
			<%= f.label :price %>
			<%= f.text_field :price %>
	</div>


	<div class ="field">
		<p>
			<%= f.label :gift_card %>
			<%= f.text_field :gift_card %>
		</p>
	</div>

	<div class ="field">
		<p>
			<%= f.label :promotion_link %>
			<%= f.text_field :promotion_link %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :contract_id %>
			

			<%= collection_select(:summary, :contract_id, Contract.all, :id, :name) %>
		</p>
	</div>

	<div class="field">
		<p>
			<%= f.label :device_id %>
			<%= collection_select(:summary, :device_id, Device.all, :id, :display_name) %>
		</p>
	</div>	

	<div class="field">
		<p>
			<%= f.label :retailer_id %>
			<%= collection_select(:summary, :retailer_id, Retailer.all, :id, :name) %>
		</p>
	</div>

	<div class="field">
		<%= f.submit %>
	</div>

<%end%>
